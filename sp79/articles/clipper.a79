#include "Inkey.ch"
#include "Cursor.ch"
         // TABLE:  ITEMS.DBF - place of the following definitions, and
         // other MANIFEST CONSTANTS is in separate "#include" (".ch") file
         // DBSTRUCT() family of functions is heavily utilized to generate
         // .ch's - later modified by an editor. I consider renaming all
         // the .DBF's/.NTX's and fields in my app's instead of present
         // DBF[1-n].DBF, NTX[1-n].NTX and F[1-nnn] fields.
#define    iF30_ITEM_CODE         1
#define    iF31_ITEM_NAME         2
#define    iF32_INV_UOM           3
#define    iF33_TAX_CODE          4 // <=== used for M->Array[n]
#define    iF34_SALE_PRICE_WS     5
#define    iF35_PRIME_PRICE_WS    6

#define    iF36_PURCH_TERMS_WS    7 // Codes - Relation to .DBF table of
                                    // TERMS - combination of discounts,
#define    iF37_PURCH_TERMS_RE    8 // projected profit margins and
#define    iF38_SALES_TERMS       9 // direct expenses offered by DEFAULT
                                    // - user may alter
#define    iF39_ALLOWED_LOS      10
#define    iF40_MAIN_SUPPL       11
#define    iF41_PACKAGING        12 // # OF MEAS.UNITS
#define    iF42_ITEM_TYPE        13 // GOODS, MATERIALS, PRODUCTS
#define    iF43_PACKAGE_1        14 // BOTTLE, BAG, BOX, CAN ...
#define    iF44_NORMATIVE_1      15
#define    iF45_PACKAGE_2        16 // CONTAINER, CRATE, ....
#define    iF46_NORMATIVE_2      17
         // ...... shortened list ........

         // TABLE:  TAX_CODE.DBF
#define    iF45_TAX_CODE          1 // <=== used in (Fieldget(n))
#define    iF46_SUB_CODE          2
#define    iF47_DESC              3
#define    iF48_VALID_FROM_DATE   4
#define    iF49_GST               5
#define    iF50_PST_BC            6
         // ...... shortened list ........

*---------------
PROC Br_sampl
*---------------

// alter ARRAY's definition here
LOCAL aTAX_COD_Fields := {'F45','F46','F47','F48'},;
      aTAX_COD_Titles := {'TAX CODE','MARK','NAME','FROM DATE '},;
      Breaked_job := .F.,  aITEMS := {}

SELECT 3
USE             ITEMS SHARED           // put your .DBF name here
SET INDEX TO    ITEMS1, ITEMS2         // put your .NTX name(s) here
SELECT 4
USE             TAX_CODE SHARED        // put your .DBF name here
SET INDEX TO    TAX_COD1               // put your .NTX name(s) here

/*-------------------------------------------------------------------------
I posted my Lan_open() the other day. It or equivalent should be used when
on network    -----------------------------------------------------------*/

DO WHILE !Breaked_job           // < 1 > - there usually are and other loops

   // ....... processing
   aITEMS := ITEMS->( scatter("EMPTY") )  // scatter() is enclosed

   @ 10,1  say "SAMPLE BROWSING: "
   @ 10,18 get aITEMS[iF33_TAX_CODE]  picture "XXXXX" valid Br_check_1(;
      '4',                                /* 1 - Sel_area  */;
      aITEMS[iF33_TAX_CODE],              /* 2 - Seek_var1 */;
      '',                                 /* 3 - Seek_var2 */;
      'Doesn't exist, pick up one ...',   /* 4 - Mess_F    */;
      '',                                 /* 5 - Mess_T    */;
      /* NOTE par_6 can be a PRIVATE var, too */
      aITEMS,                             /* 6 - Mvar_or_arr_name */;
      /* below (par_7) can be TAX_CODE->( Fieldpos(F45) ) */
      iF45_TAX_CODE,                      /* 7 - iTable_field_pos */;
      iF33_TAX_CODE,                      /* 8 - iArray_pos */;
      ,,                                  /* 9 - No_char_if_substr */;
      13, 3, 21, 78,                  /* 10-13 - t, l, b, r */;
      aTAX_CODE_Fields,                  /* 14 - aDbedit_fields  */;
      aTAX_CODE_Titles,                  /* 15 - aDbedit_titles  */;
      .F.                                /* 16 - Ok_empty */;
      )= .T.
   // there is a more sophisticated implementation of Clipper Get/Read
   // Object System in my LIB PRG
   read;    if lastkey() == K_ESC ; exit ; endif
   // ; ....... processing

   ITEMS->( gather(aITEMS) )          // gather() is enclosed below
ENDDO


FUNCTION Br_check_1 (   Sel_area, Seek_var1, Seek_var2, Mess_F, Mess_T,;
                        Mvar_or_arr_name, iTable_field_pos, iArray_pos,;
                        No_char_if_substr, t, l, r, b,;
                        aDbedit_fields, aDbedit_titles, Ok_empty )

/*-------------------------------------------------------------------------

Br_check_1() - parameters, description and comments:

   <1> - Sel_area  - SELECT (Sel_area) if desired is not the CURRENT one
   <2> - Seek_var1 - can be compound value (M->Var_1 + M->Var_2 + M->Var_n)
   <3> - Seek_var2 - in some special cases it is needed in addition to above
   <4> - Mess_F    - Message if SEEK fails
   <5> - Mess_T    - Message if SEEK succeeds; Mess_T is usually empty
   <6> - Mvar_or_arr_name - which is to be assigned a .DBF value by this ()
   <7> - iTable_field_pos - in .DBF file.
         A FIELDPOS() whose VALUE we wish to assign to a Mvar_or_arr_name
   <8> - iArray_pos - if we are updating an M->array element, this NUM value
                      tells us to which element of the array we should assign
                      a value from FIELDPOS() .DBF FIELD. In a way, here
                      CLIPPER is transformed to a SPREADSHEET
   <9> - No_char_if_substr- In some only SUBSTR() of the FIELD is needed ..
<10-13> - t, l, b, r  - DBEDIT() window corners (top, left, bottom, right)
  <14> - aDbedit_fields - LOCAL array in calling Proc, here as a Dbedit() param
  <15> - aDbedit_titles - LOCAL array in calling Proc, here as a Dbedit() param
  <16> - Ok_empty  - in some special cases, we can allow empty variable.
                     If some value is entered it must exist  in related DBF,
                     when it is checked by this function

-------------------------------------------------------------------------*/
LOCAL Get_win, Save_sel

IF Ok_empty
   IF empty( iif( valtype( Mvar_or_arr_name ) == "A",;
      Mvar_or_arr_name[ iArray_pos ], Seek_var1 ) ) )
      RETURN .T.
   ENDIF
ENDIF

IF !empty(Sel_area);  Save_sel := Select();   select (Sel_area);  ENDIF

seek IF( empty( Seek_var2 ), Seek_var1, Seek_var1 + Seek_var2 )

IF found()
   IF !empty(Mess_T)
      setcursor(SC_NONE)
      Center_In_Row( Mess_T, MAXROW(), MAXCOL(), 2) - // enclosed
      setcursor(SC_NORMAL)
   ENDIF
   IF !empty(Sel_area);   select (Save_sel);  ENDIF
   RETURN.T.                    // O.K.; User can go to the next GET_Var
ENDIF

set SOFTSEEK on // SEEK failed- .NTX pointer to the nearest Seek_Var1/2 value
seek IIF( empty( Seek_var2 ), Seek_var1, Seek_var1+Seek_var2 )
set SOFTSEEK off

IF eof()
Center_In_Row( "Too high value, or no records in target", MAXROW(),MAXCOL(),2)
   IF !empty(Sel_area);   select (Save_sel);  ENDIF
   RETURN .F.
ENDIF

Center_In_Row(Mess_F, MAXROW(), MAXCOL(), 2)          // enclosed
Get_win := savescreen( 3, 0, MAXROW(), MAXCOL())

// My_box() enclosed below - char(n) used instead of typed character not to
// trouble your e-mailer.
My_box(t, l, r, b, .f.,' Please, pick up one of existing values ', 3, 'char(n)')

// dbedit Clipper viewer / browser for .DBF tables; without defined keyboard
// handler function, it handles internally only browsing keys (arrows, PgUp,
// PgDn, etc.) and can be interrupted only by <Esc>-Cancel or <Enter>-Select
// dbedit() will NOT work with FiveWin? - so that Tbrowse should be here

dbedit(++t, ++l, --r, --b, aDbedit_fields, '', '', aDbedit_titles)

IF lastkey() != K_ESC                     // It is K_ENTER then
   IF valtype( Mvar_or_arr_name ) == "A"  // Array
      Mvar_or_arr_name[ iArray_pos ] := fieldget( iTable_field_pos )
   ELSE
      // Funny thing - this function has worked for me for almost five years
      // and I have just espied that "&" could be replaced by
      // @Mvar_or_arr_name in calling proc - S'87 influence was obviously
      // still pretty strong when writing this function....
      &Mvar_or_arr_name              := fieldget( iTable_field_pos )
   ENDIF
ENDIF
restscreen( 3, 0, MAXROW(), MAXCOL(), get_win)
IF !empty(Sel_area);   select (Save_sel);  ENDIF

RETURN .F.         // ==> TIP:   RECURSE  Br_check_1() with O.K. M->Var


FUNCTION scatter ( Flag_empty )
//Returns an ARRAY whose elements contain field values (empty, according to
//the field type, or existing values; The later is handy when user wants to
//have previously entered data repeated)

LOCAL num_fields := fcount(), aFvals[fcount()], fnum, s

FOR fnum = 1 TO num_fields

   IF Flag_empty != NIL

      DO CASE
         CASE type( field(fnum) ) == "C"
            aFvals[fnum] := space(len(fieldget(fnum)))
         CASE type( field(fnum) ) == "N"
            s := str(fieldget(fnum))                  // <== TIP
            aFvals[fnum] := iif ( "." $ s, 0.00, 0 )
         CASE type( field(fnum) ) == "D"
            aFvals[fnum] := ctod('')
         CASE type( field(fnum) ) == "L"
            aFvals[fnum] := .f.
      ENDCASE

   ELSE
      // handy for copying previous entry. My users have appreciated this.
      aFvals[fnum] = fieldget(fnum)
   ENDIF

NEXT fnum
RETURN aFvals


FUNCTION gather ( Ar )
//  Ar{} - ARRAY variable with prepared elements to update an ACTIVE record
//  in a .DBF file  Ar[i] == .DBF->FIELDPOS[i]

LOCAL num_fields := fcount(), fnum

r_lock()         // pretty sophisticated record-lock handler (not enclosed)
                 // The newest versions of Clipper allow for multi-record
                 // per table locks. The feature should be utilizied when
                 // doing complex updates. Indeed.
FOR fnum = 1 TO num_fields
   fieldput(fnum, Ar[fnum])
NEXT
RETURN NIL


FUNCTION My_Box (nRow1, nCol1, nRow2, nCol2,;
                 lBorder, cTitle, nTitle_row, cShadow_char )
// lBorder = .T./double, .F./single, cTitle = Window title, cShadow = char(n)
// Multi-purpose; for drawing Menu, Browse, Help, Memoedit etc. windows
// NOTE: This technique of shadowing will NOT work with LLIBG or FiveWin...

@  nRow1,  nCol1 CLEAR TO  nRow2 , nCol2
@  nRow1,  nCol1 TO  nRow2,  nCol2  IF( lBorder, DOUBLE, "")
IF len( cTitle)  > 1
   @ nTitle_row, (  MAXCOL() / 4 ) say replicate(' ', ( MAXCOL() / 2 ) )
   @ nTitle_row, ( (MAXCOL() / 2) - (len( cTitle ) / 2) ) say  cTitle
ENDIF
IF cShadow_char !=  NIL
   @  nRow2 +1,  nCol1 +1,  nRow2 +1, nCol2 + 1  BOX  replicate(  shadow, 9)
   @  nRow1 +1,  nCol2 +1,  nRow2 ,   nCol2 + 1  BOX  replicate(  shadow, 9)
ENDIF
RETURN NIL


FUNCTION Center_In_Row ( cString, nRow, nWidth, nWait_period )
// Center (<cString> in <nRow>, width  <nWidth>, and wait for <nWait_period>)
// the same function is used for printed reports to center their titles

IF pcount() < 4; nWait_period = 0; ENDIF
IF pcount() = 1                                         // Only String
   nWidth := MAXCOL(); nRow := MAXROW(); @ MAXROW(),0
ELSEIF pcount() = 2;   nWidth := MAXCOL();    ENDIF

IF len(cString) >= nWidth /* too long to be centered */; RETURN col(); ENDIF

setcursor(SC_NONE)
IF nRow = MAXROW(); @ nRow, 0 say space(MAXROW()); tone(300,1); tone(499,1)
   @ nRow, (int(nWidth/2) - int(len(cString)/2)) say 'chr(n) '+cString+' chr(n)'
ELSE
   @ nRow, (int(nWidth/2) - int(len(cString)/2)) say cString
   IF cString !=  ' ' ; tone(300,0.5) ;  ENDIF // handy for LONG reports
ENDIF
IF pcount() = 4
   inkey(nWait_period)
   @ nRow, (int(nWidth/2) - int(len(cString)/2)) say space(len(cString)+4)
   IF nWait_period > 0; setcursor(SC_NORMAL);   ENDIF
ENDIF
RETURN NIL

Best regards. Miloslav.

