Unit Spline;
  { Realization of cubic spline-interpolation }

(***********************************************************)
(*  Spline-interpolation                                   *)
(***********************************************************)
Interface

Uses ArtGraph, { Basic package unit }
     Globals,  { Global definitions }
     MenuUtil, { Auxiliary procedures and functions }
     Math;     { Unit solves linear set of equations }

Type
  SType = (Local,Global); {Spline type definition}
Const
  SplineDots : byte = 50; { Number of dots in spline }
  MaxSpline = 16;    { Max number of spline-functions - can be user increased}
  SplineType : SType = Local;   { Spline type : }
    { Local - cubic local spline , second derivative - not continious }
    { Global- cubic global spline , second derivative - continious }


  Sbeg : real = 0.5; { Global spline boundary condition at curve beginning }
  Send : real = 0.5;   { Global spline boundary condition at curve end}

procedure PlotSpline(var X,Y);
  { Spline plotting . X,Y - arbitrary structures analogous to Plot(X,Y) }
  { structures. Values of X-columns must strictly increase or decrease }

Implementation
