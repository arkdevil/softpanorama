  { Float - basic data type used by ArtGraph routines }
{$IFOPT N+}
   type Float = extended;
   const Global_Tolerance : Float = 1.0e-32;
{$ELSE}
   type Float = real;
   const Global_Tolerance : Float = 1.0e-16;
{$ENDIF}

type
  AnyString = string[80]; 
var
  MyGetMaxY : integer; { Max screen size }
const
{$IFDEF MENU}
  UseMenu : Boolean = True;   { Mode "with menu" }
{$ELSE}
  UseMenu : Boolean = False;  { Mode "without menu" }
{$ENDIF}

  EditColor : word = NotUsed; { edit text color }
  AxisColor : word = NotUsed; { axes color }

  { Menu color attributes }
  ActAttr : byte = $60;
  ComAttr : byte = $9E;
  InfAttr : byte = $0C;
  RedAttr : byte = $91;
  ErrAttr : byte = $C0;
