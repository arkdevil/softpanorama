Unit Present;
 { Unit realizes presentational graphics : pie chart,bar chart and histogram }
(***********************************************************)
(*  Presentational graphics                                *)
(***********************************************************)

Interface

Uses Graph,             { standart TP unit }
     Globals,           { unit of global definitions }
     UtilUnit,          { auxiliary procedures and functions }
     MenuUtil,          { auxiliary procedures and functions }
     ArtGraph;          { basic package unit }

type
  LabelFuncType = function(i : longint) : AnyString;
  { Procedural type defines user function that returns labels, }
  { corresponding with PieChart sectors or BarChart column-groups }
var
  GetLabel : LabelFuncType;     { Label definition function }
const
  PullDist : real = 0.25;       { Distance to pull sector out of PieChart, }
                                { in fractions of radius }
  PulledOut : set of byte = []; { Number of sectors to pull out }
  BarSpace : real = 0.0;        { Interval between column-groups ,}
                                { in fractions of column width }
  HistBars : byte = 16;         { Number of classes in histogram }
  ThickBar : Boolean = True;    { definition of bar type }

procedure PieChart(var Y; Col : longint);
  { Pie chart drawing. Y - arbitrary structure analogous to Plot(X,Y) }
  { structures. Sector's angle value calculated as Abs(Yi)/Sum, where
  { Yi - i-th element, Ð°nd Sum - sum of absolute values Col-th column }

procedure BarChart(var Y);
  { Bar chart drawing.Y - arbitrary structure analogous to Plot(X,Y) }
  { structures. }

procedure Hist(var Y; Col : longint);
  { Draws frequency histogram of Col-th column of structure Y }
Implementation
