$MACRO 5;
{Нахождение с текущей позиции строки, превышающей Right_Margin,
и перевод курсора на ее позицию Right_Margin.}
Def_Int(n := 0);
Make_Message('Starting...');
WHILE AT_EOF <> TRUE DO
n := n + 1;
EOL;
 IF C_COL > Right_Margin THEN
 Make_Message('Stop here! Line No. ' + str(n) + ' EOL = ' + str(C_COL));
 GOTO_COL(Right_Margin);
 goto quit;
 END;
DOWN;
END;
Make_Message('There are no lines bigger then ' + str(Right_Margin));
quit:
END_MACRO;