$MACRO MMod From All;  { Toggle Mouse mode }
		Mouse := 0;
	IF (Mouse_Mode = 1  ) THEN
		Mouse_Mode := 0;
		Mouse := 1;
		Mou_Set_Limits(1,1, Screen_Width, Screen_Length);
	ELSE
		Mouse_Mode := 1 ;
		Mou_Disappear := 1;
		Mou_Set_Pos ( WhereX, WhereY);
		Mouse := 1;
	END;
	Make_message('Now,  Mouse Mode = '+Str(Mouse_Mode));
	Sound(1000);
	delay(7);
	Sound(0);
END_MACRO;