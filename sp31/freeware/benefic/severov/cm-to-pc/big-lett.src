$MACRO BESM_UPP TO <Grey*>; {Убрать маленькую, оставить большую}
	IF Search_Fwd('[а-пр-я][А-Я]',0) THEN Key_In(<DEL><RT>);
	END;
END_MACRO;

$MACRO BESM_LOW TO <Grey->; {Убрать большую, оставить маленькую}
	IF Search_Fwd('[а-пр-я][А-Я]',0) THEN Key_In(<RT><DEL>);
	END;
END_MACRO;

$MACRO BESM_UND TO <Grey+>; {Скоростной UNDO}
	Key_In(<CtrlF7><LF>);
END_MACRO;

$MACRO BESM_WIN TO <GreyEnter>; {Смена окна}
	Key_In(<ShftF1>);
END_MACRO;