$MACRO MaxLen;
  {выяснение длины самой длинной строки}
  DEF_INT(k,m,n);
  DEF_CHAR(cc);

  REFRESH := FALSE;
  MARK_POS;
  TOF; m := 0; n := 1;
  WHILE AT_EOF = 0 do
    k := LENGTH(GET_LINE);
    if m < k then m := k; n := C_LINE; end;
    DOWN;
  end;
  GOTO_MARK;
  REFRESH := TRUE;
  MAKE_MESSAGE('Самая длинная строка: '+str(n)+'-я, ее длина: '+str(m)+'.');
end_macro;
