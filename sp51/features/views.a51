    c;

main()
{
  run=270;
  dir=run;
  step=20;

  while(1)
  {
    drive(run,100);
    chk_drive();
    if( range=scan(dir,step/2) )
    {
      if( range<700 )
        cannon(dir,range);
      dir-=8;
    }
    else
    {
      dir+=step;
    }
  }
}

chk_drive()
{
  int x,y,d;

  x=loc_x();
  y=loc_y();
  d=speed();

  if( (run==180 && x<d) ||
      (run==000 && x>999-d) ||
      (run==270 && y<d) ||
      (run==090 && y>999-d) )
  {
    while(speed()>=50) drive(run+45,30);
    run=(run+90)%360;
    dir=run;
    step=20;
  }
}

