{******************************MULTI-EDIT MACRO******************************

Name:  SHIFT_BL

Description:  Комплект макросов для быстрой отметки блока
			  при помощи  одновременного нажатия Shift и серых 
			  клавиш передвижения курсора

		  Stern i K°   Стерник Геннадий       08.01.91

*****************************************************************************}
$MACRO_FILE Shift_BL;

$MACRO BL_UP to <Up> FROM EDIT;
	R_AX := $0200;
	INTR($16);
	IF  (R_AX and $0003)
		THEN
		Str_Block_Begin;
		up;
		RM('Shft_Bl');
	else
		Up;
	END;
END_MACRO;

$MACRO BL_Dn to <dn> FROM EDIT;
	R_AX := $0200;
	INTR($16);
	IF (R_AX and $0003)
		THEN
		Str_Block_Begin;
		Down;
		RM('Shft_Bl');
	else
		down;
	END;
END_MACRO;

$MACRO BL_Rt to <Rt> FROM EDIT;
	R_AX := $0200;
	INTR($16);
	IF (R_AX and $0003)
		THEN
		Str_Block_Begin;
		Right;
		RM('Shft_Bl');
