		Right;
	END;
END_MACRO;

$MACRO BL_Lf to <lf> FROM EDIT;
	R_AX := $0200;
	INTR($16);
	IF (R_AX and $0003)
		THEN
		Str_Block_Begin;
		MS_Left;
		RM('Shft_Bl');
