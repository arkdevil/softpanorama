        <.deptmp $sed -n 's|c:#include <\(.*\)>.*$|o: /usr/include/\1|p' \
           >> $mf.new
        <.deptmp $sed -n 's|h:#include "\(.*\)".*$|h: \1|p' | \
           $sed -f .hsed >> $mf.new
        <.deptmp $sed -n 's|h:#include <\(.*\)>.*$|h: /usr/include/\1|p' \
           >> $mf.new
        for file in `$cat .shlist`; do
            $echo `$expr X$file : 'X\(.*\).SH'`: $file config.sh \; \
